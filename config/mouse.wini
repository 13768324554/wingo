$OPACITY_UP := `transset-df -p --max 1.0 --inc 0.05`
$OPACITY_DOWN := `transset-df -p --min 0.1 --dec 0.05`

[Root]
1 := Focus

[Client]
1 := FocusRaise

[Frame]
Mod4-1 := Move
Mod4-3 := Resize
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullIcon]
1 := Move
1 := FocusRaise
3 := Resize
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullTitleText]
1 := Move
1 := FocusRaise
3 := Resize
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullTitleBar]
